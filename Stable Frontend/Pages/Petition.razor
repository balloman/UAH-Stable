@page "/petition"


@using Stable_Lib.Handlers
@inject FirestoreHandler Handler
@inject NavigationManager NavManager


<div class="navbar navbar-lgiht bg-light">
    <div class="navbar-brand mb-0">
        <h2>Petitions</h2>
    </div>
</div>
<div style="border:10px" id="list container">
    <div class="row">
        <div class="col-8" id="list">
            <table class="table">
                <thead class="thead-primary">
                    <tr>
                        <th style="width:10%">Category</th>
                        <th style="width:65%">Title</th>
                        <th style="width:10%">Created</th>
                        <th style="width:15%">Votes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resultsKey in Results.Keys)
                    {
                        <tr>
                            <td>@Results[resultsKey].Category</td>
                            <td>@Results[resultsKey].Title</td>
                            <td><p style="margin:0px; padding:0px">@Results[resultsKey].Created.ToLocalTime().ToString("f")</p></td>
                            <td><span class="oi oi-thumb-up">@Results[resultsKey].Votes</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-2" id="Sidebar">
            <button id="Add Petition" @onclick="AddPetition" class="btn btn-primary">Add Petition</button>
        </div>
    </div>
</div>
